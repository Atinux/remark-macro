{
  "name": "remark-macro",
  "version": "1.0.2",
  "description": "A macro system for remarkjs",
  "main": "index.js",
  "browser": "browser.js",
  "module": "browser.js",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "prepublishOnly": "npm run build",
    "test": "japa",
    "build": "rollup -c"
  },
  "keywords": [
    "remark",
    "unified",
    "macros"
  ],
  "author": "virk",
  "license": "MIT",
  "dependencies": {
    "unist-util-visit": "^1.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cz-conventional-changelog": "^2.1.0",
    "dedent": "^0.7.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "nyc": "^11.6.0",
    "remark-html": "^7.0.0",
    "remark-parse": "^5.0.0",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^3.0.0",
    "standard": "^11.0.1",
    "unified": "^6.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard": {
    "ignore": [
      "browser.js"
    ]
  }
}
